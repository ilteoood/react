{
	"$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
  "files": {
    "include": ["packages/**/*.{js,jsx,ts,tsx}"]
  },
	"organizeImports": {
		"enabled": true
	},
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "tab",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "quoteProperties": "preserve",
      "trailingComma": "all",
      "semicolons": "always",
      "arrowParentheses": "always"
    }
  },
	"linter": {
		"enabled": true,
		"rules": {
			"all": true
		}
	}
}
