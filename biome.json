{
	"$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 8,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "quoteProperties": "preserve",
      "trailingComma": "all",
      "semicolons": "always",
      "arrowParentheses": "always"
    }
  },
	"linter": {
		"enabled": true,
		"rules": {
      "recommended": true
		}
	}
}
